<%= render 'layouts/customer.header' %>
<div class="container">
<h2 class="head-line title_h2 text-center">注文情報確認</h2>
 <div calss="row">
  <div class="col-xs-9">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>名前</th>
            <th>チェックイン</th>
            <th>チェックアウト</th>
            <th>人数</th>
            <th>料金(税込)</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td class="text-right">
               <%= @reservationc[:name]%>
              </td>
              <td class="text-right">
               <%= @reservationc["start_time(1i)"] %>.<%= @reservationc["start_time(2i)"] %>.<%= @reservationc["start_time(3i)"] %>|<%= @reservationc["start_time(4i)"] %>:<%= @reservationc["start_time(5i)"] %>
              </td>
              <td class="text-right">
               <%= @reservationc["end_time(1i)"] %>.<%= @reservationc["end_time(2i)"] %>.<%= @reservationc["end_time(3i)"] %>|<%= @reservationc["end_time(4i)"] %>:<%= @reservationc["end_time(5i)"] %>
              </td>
              <td class="text-right">
                <%= @reservationc[:number_of_people] %>人
              </td>
              <td class="text-right">
                <%= (15000* @reservationc[:number_of_people].to_i).to_s %>
              </td>
            </tr>
        </tbody>
      </table>
      <div class="container">
       <div class="row
         <% form_with model: @reservationc do |f|　%>
             <% f.hidden_field :course_id, :value => current_course.id %>
             <% f.hidden_field :start_time, :value => @reservationc["start_time(1i)"] %>
　　　　　　 <% f.hidden_field :start_time, :value => @reservationc["start_time(2i)"] %>
　　　　　　 <% f.hidden_field :start_time, :value => @reservationc["start_time(3i)"] %>
　　　　　　 <% f.hidden_field :start_time, :value => @reservationc["start_time(4i)"] %>
　　　　　　 <% f.hidden_field :start_time, :value => @reservationc["start_time(5i)"] %>
　　　　　　 <% f.hidden_field :end_time, :value => @reservationc["end_time(1i)"] %>
             <% f.submit "確定" %>
　       <% end %>
        <%#= link_to "確定", customers_courses_path %> | <%= link_to "戻る", new_customers_reservationc_path %>
       </div>
      </div>
    </div>
  </div>
</div>