<%= render 'layouts/customer.header'%>
<div class="container">
 <div class="col">
  <p>名前</p>
        <div class="col">
          <div class="field">

            <%= @customer.last_name %>
          </div>
        </div>
        <div class="col">
          <div class="field">

            <%= @customer.first_name %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p>フリガナ</p>
        </div>
        <div class="col">
          <div class="field">
            <p>(セイ)</p>
            <%= @customer.last_name_kana %>
          </div>
        </div>
        <div class="col">
          <div class="field">
            <p>(メイ)</p>
            <%= @customer.first_name_kana %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p>メールアドレス</p>
        </div>
        <div class="col">
          <%= @customer.email %>
        </div>
        <div class="col"></div>
      </div>

      <div class="row">
        <div class="col">
          <div class="field">
            <p>郵便番号（ハイフンなし）</p>
          </div>
        </div>
        <div class="col">
          <%= @customer.postcode %>
        </div>
        <div class="col"></div>
      </div>

      <div class="row">
        <div class="col">
          <p>住所</p>
        </div>
        <div class="col">
          <%= @customer.address %>
        </div>
        <div class="col"></div>
      </div>

      <div class="row">
        <div class="col">
          <p>電話番号（ハイフンなし）</p>
        </div>
        <div class="col">
          <%= @customer.phone_number %>
        </div>
        <div class="col"></div>
      </div>
    </div>
  </div>