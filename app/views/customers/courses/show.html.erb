 <%= form_for(@course, url:customers_reservationcs_path) do |f| %>
      <div class="form-group">
        <%= f.label :写真 %>
        <div class="row">
          <%= attachment_image_tag @course, :image, size: '180x180' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :コース %>
          <%= @course.name %>
      </div>

      <div class="form-group">
        <%= f.label :コース紹介 %>
        <div class="row">
        <%= @course.introduction %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :税抜き価格 %>
        <lavel><%= @course.price %>円</lavel>
      </div>

      <%= link_to "予約する", customers_reservationcs_path(course_id: @course.id) %>
 <% end %>
