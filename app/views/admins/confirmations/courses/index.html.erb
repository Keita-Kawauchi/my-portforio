<%= render 'layouts/admin_header' %>
<h4 style="margin-top: 20px">コース</h4>
		<div class="row">
			<% @courses.each do |course| %>
				<div class="col-md-3">
					<%= link_to customer_product_path(product) do %>
					    <div class="over">
						<%= attachment_image_tag course, :image, width: "100%", height: "150px", style: "object-fit: cover;", fallback: "no_image.jpg" %>
						  </div>
					<% end %>
					<ul style="list-style: none; margin:10px 0; padding: 0;">
						<li><%= course.name %></li>
						<li>¥<%= (course.non_tax_price * 1.1).to_i.to_s(:delimited) %></li>
					</ul>
				</div>
			<% end %>
		</div>