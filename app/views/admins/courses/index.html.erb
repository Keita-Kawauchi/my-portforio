<%= render 'layouts/admin.header' %>
 <div class="container">
  <h4 style="margin-top: 20px">コース</h4>
		<div class="row">
			<% @courses.each do |course| %>
				<div class="col-md-3">
					<%= link_to customers_course_path(course.id) do %>
						<div class="over">
						<%= attachment_image_tag course, :image, width: "100%", height: "150px", style: "object-fit: cover;" %>
						</div>
					<ul style="list-style: none; margin:10px 0; padding: 0;">
						<%= link_to course.name %>
						<li>¥<%= course.price %></li>
					</ul>
					<%= link_to "修正", edit_admins_course_path(course.id) %>
					<% end %>
				</div>
			<% end %>
		</div>
	 <%= link_to "新規追加", new_admins_course_path %>
   </div>